! Kirikaes Xresources

! fonts
URxvt.font: xft:Iosevka Term:style=Regular:size=10
URxvt.boldFont: xft:Iosevka Term:style=Regular:size=10
URxvt.italicFont: xft:Iosevka Term:style=Regular:size=10
URxvt.boldItalicFont: xft:Iosevka Term:style=Regular:size=10

! rofi
rofi.font: scientifica Regular 8
rofi.terminal: urxvtc
rofi.ssh-client: ssh
rofi.ssh-command: {terminal} -e {ssh-client} {host}

! URxvt
URxvt.scrollBar: false
URxvt.cursorUnderline: true
URxvt.internalBorder: 15
URxvt.lineSpace: 1
URxvt.letterSpace: 0
URxvt.perl-ext-common: default,matcher,font-size
URxvt.font-size.step: 2

! Performance
URxvt*buffered:		false
URxvt*saveLines:		0
URxvt*skipBuiltinGlyphs:	rue
URxvt*scrollWithBuffer: 	false
URxvt*skipScroll: 		false
URxvt*jumpScroll: 		false

! DPI/Font
Xft.dpi: 			    96
Xft.autohint: 		false
Xft.antialias: 		1
Xft.hinting: 			true
Xft.hintstyle: 		hintsfull
Xft.rgba: 			  none
Xft.lcdfilter: 		lcddefault

! Clickable URLs
URxvt.url-launcher: firefox
URxvt.matcher.button: 1

! Use Control-Shift-V/C for X clipboard
URxvt.iso14755:		false
URxvt.iso14755_52:		false
URxvt.keysym.Shift-Control-V:	eval:paste_clipboard
URxvt.keysym.Shift-Control-C:	eval:selection_to_clipboard

! Resizeable text
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease

! colors
#include ".nord"

